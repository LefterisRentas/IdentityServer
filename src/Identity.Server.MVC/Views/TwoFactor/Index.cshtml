@model Identity.Server.MVC.Views.TwoFactor.TwoFactorViewModel

<div class="two-factor-authentication-page p-6">
    <div class="lead mb-6">
        <h1 class="text-3xl font-bold text-white">Two-Factor Authentication</h1>
        <p class="text-gray-300">Enter the code sent to your email</p>
    </div>

    <partial name="_ValidationSummary" />

    <form asp-action="VerifyCode" method="post">
        <div class="form-group mb-4">
            <label asp-for="Code" class="block text-sm font-medium text-gray-300"></label>
            <input asp-for="Code" class="form-control mt-1 block w-full rounded-md bg-gray-700 border-transparent focus:border-gray-500 focus:ring-0" autofocus />
        </div>
        <div class="form-group mb-4">
            <div class="form-check">
                <input asp-for="RememberBrowser" class="form-check-input" />
                <label asp-for="RememberBrowser" class="form-check-label text-sm text-gray-300"></label>
            </div>
        </div>
        <div class="form-group mb-4">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label text-sm text-gray-300"></label>
            </div>
        </div>
        <div class="flex space-x-4">
            <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded">Verify Code</button>
        </div>
    </form>

    <form asp-action="ResendCode" method="post" class="mt-4">
        <button type="submit" class="btn bg-gray-700 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded">Resend Code</button>
    </form>
</div>