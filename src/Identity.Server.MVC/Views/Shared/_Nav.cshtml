@using IdentityServer4.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}
<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<div class="nav-page">
    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
        <a href="~/" class="navbar-brand">
            <img src="~/icon.png" class="icon-banner" alt="Icon" style="width: 30px; height: 30px; margin-right: 10px;">
            Identity Server
        </a>

        <div class="collapse navbar-collapse">
            @if (!string.IsNullOrWhiteSpace(name))
            {
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @name <b class="caret"></b>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                        <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                    </div>
                </li>
            </ul>
            }
            else
            {
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="btn btn-secondary" asp-controller="Account" asp-action="Login">Login</a>
                </li>
            </ul>
            }
        </div>
    </nav>
</div>
