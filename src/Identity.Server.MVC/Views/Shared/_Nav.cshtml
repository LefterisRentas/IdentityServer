@using Identity.Server.MVC.Options
@using IdentityServer4.Extensions
@using Microsoft.Extensions.Options
@inject IOptionsSnapshot<OrganizationOptions?> OrganizationOptions

@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
    string organizationName = OrganizationOptions?.Value?.Name;
}
<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<div class="nav-page">
    <nav class="bg-black text-white shadow-md py-4">
        <div class="container mx-auto flex items-center justify-between">
            <a href="~/" class="flex items-center text-white">
                <img src="~/icon.png" alt="Icon" class="w-8 h-8 mr-2">
                <span class="font-bold text-xl">@organizationName</span>
            </a>
            <div class="flex items-center space-x-4">
                @if (!string.IsNullOrWhiteSpace(name))
                {
                    <div class="relative">
                        <button class="text-white flex items-center focus:outline-none" id="userDropdown" aria-haspopup="true" aria-expanded="false">
                            @name <svg class="w-4 h-4 ml-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                        </button>
                        <div id="dropdownMenu" class="absolute right-0 mt-2 w-48 bg-gray-800 rounded-md shadow-lg py-1 hidden">
                            <a href="@Url.Action("Index", "Settings")" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-600">Settings</a>
                            <a href="@Url.Action("Logout", "Account")" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-600">Logout</a>
                        </div>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="bg-gray-700 text-white py-2 px-4 rounded-md hover:bg-gray-600">Login</a>
                }
            </div>
        </div>
    </nav>
</div>
