@model Identity.Server.MVC.Models.Account.Settings.EmailChangeViewModel

<div class="confirm-email-change-page p-6">
    <div class="lead mb-6">
        <h1 class="text-3xl font-bold text-white">Confirm Email Change</h1>
        <p class="text-gray-300">Enter the confirmation code sent to your new email address.</p>
    </div>

    <partial name="_ValidationSummary" />

    <form asp-action="ConfirmEmailChange" method="post">
        <input type="hidden" asp-for="NewEmail" />
        <div class="form-group mb-4">
            <label asp-for="Token" class="block text-sm font-medium text-gray-300"></label>
            <input asp-for="Token" class="form-control mt-1 block w-full rounded-md bg-gray-700 border-transparent focus:border-gray-500 focus:ring-0" autofocus />
        </div>
        <div class="flex space-x-4">
            <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded">Confirm Email Change</button>
        </div>
    </form>
</div>
